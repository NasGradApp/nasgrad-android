<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorBackground</item> <!-- added specifically to set status bar color, if affects anything else find another way-->

        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>

        <item name="android:background">@color/colorBackground</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Montserrat">
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Montserrat.Standard">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Montserrat.Bold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="Montserrat.Small">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Montserrat.Small.Light">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="MontserratSemiBold">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="MontserratSemiBold.Standard">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.Button.Navigation" parent="MontserratSemiBold">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ToolbarStyle">
        <item name="titleTextAppearance">@style/Montserrat.Bold</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

</resources>
