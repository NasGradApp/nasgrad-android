<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorBackground</item> <!-- added specifically to set status bar color, if affects anything else find another way-->

        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>

        <item name="android:background">@color/colorBackground</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Montserrat">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Montserrat.Bold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="Montserrat.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Montserrat.Small.Light">
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="MontserratSemiBold">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.Button.Action" parent="MontserratSemiBold">
        <item name="android:textColor">@drawable/button_text_selector</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.Button.Photo" parent="MontserratSemiBold">
        <item name="android:textColor">@color/colorTextDisabled</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ToolbarStyle">
        <item name="titleTextAppearance">@style/Montserrat.Bold</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

</resources>
