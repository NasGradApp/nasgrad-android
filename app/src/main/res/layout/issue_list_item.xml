<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        xmlns:app1="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4sp"
        app1:cardCornerRadius="4dp"
        app1:cardElevation="4dp"
        app1:cardUseCompatPadding="true"
        app:ignore="NamespaceTypo">

    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                app1:layout_constraintTop_toTopOf="parent"
                app1:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                app1:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/imageView"/>

        <TextView
                android:id="@+id/tvIssueTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Issue Title"
                android:textColor="#000000"
                android:textSize="32sp"
                android:textAllCaps="false"
                app1:layout_constraintStart_toEndOf="@+id/imageView"
                app1:layout_constraintTop_toTopOf="@+id/imageView"
                android:layout_marginStart="16dp"
                app1:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/tvDescription"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:lines="2"
                android:ellipsize="end"
                android:hint="Description"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                app1:layout_constraintTop_toBottomOf="@+id/tvIssueTitle"
                android:layout_marginTop="16dp"
                app1:layout_constraintBottom_toBottomOf="@+id/imageView"
                app1:layout_constraintStart_toStartOf="@+id/tvIssueTitle"
                app1:layout_constraintEnd_toEndOf="@+id/tvIssueTitle"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>