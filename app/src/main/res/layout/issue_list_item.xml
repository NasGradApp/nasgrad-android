<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/tools"
	xmlns:app1 = "http://schemas.android.com/apk/res-auto"
	android:id = "@+id/card_view"
	android:layout_width = "match_parent"
	android:layout_height = "wrap_content"
	android:padding = "4sp"
	app1:cardCornerRadius = "4dp"
	app1:cardElevation = "4dp"
	app1:cardUseCompatPadding = "true"
	app:ignore = "NamespaceTypo">

    <android.support.constraint.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	    android:layout_width = "match_parent"
	    android:layout_height = "wrap_content"
	    app:layout_editor_absoluteX = "11dp"
	    app:layout_editor_absoluteY = "13dp">

        <ImageView
	        android:id = "@+id/ivIssueImage"
	        android:layout_width = "100dp"
	        android:layout_height = "100dp"
	        android:layout_marginStart = "16dp"
	        android:layout_marginTop = "16dp"
	        android:layout_marginBottom = "16dp"
	        android:background = "@color/colorAccent"
	        app1:layout_constraintBottom_toBottomOf = "parent"
	        app1:layout_constraintStart_toStartOf = "parent"
	        app1:layout_constraintTop_toTopOf = "parent" />

        <TextView
	        android:id = "@+id/tvIssueTitle"
	        android:layout_width = "220dp"
	        android:layout_height = "wrap_content"
	        android:layout_marginStart = "16dp"
	        android:ellipsize = "end"
	        android:gravity = "center_horizontal"
	        android:hint = "Rupa ispred Levi9"
	        android:lines = "2"
	        android:maxLines = "2"
	        android:textAllCaps = "false"
	        android:textColor = "#000000"
	        android:textSize = "20sp"
	        app1:layout_constraintEnd_toEndOf = "parent"
	        app1:layout_constraintStart_toEndOf = "@+id/ivIssueImage"
	        app1:layout_constraintTop_toTopOf = "@+id/ivIssueImage" />


		<TextView
			android:id="@+id/tvType"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:gravity="center_horizontal"
			android:lines="1"
			android:maxLines="1"
			android:text="Tip :"
			android:textColor="@color/colorTextPrimary"
			android:textSize="16sp"
			app1:layout_constraintStart_toStartOf="@+id/tvIssueTitle"
			app1:layout_constraintTop_toBottomOf="@+id/tvIssueTitle" />

	    <TextView
		    android:id = "@+id/tvIssueType"
		    android:layout_width = "wrap_content"
		    android:layout_height = "wrap_content"
		    android:layout_marginStart = "8dp"
		    android:text = "Neki tip"
		    android:textColor = "@color/colorTextPrimary"
		    app1:layout_constraintBottom_toBottomOf = "@+id/tvType"
		    app1:layout_constraintStart_toEndOf = "@+id/tvType"
		    app1:layout_constraintTop_toTopOf = "@+id/tvType" />

		<TextView
			android:id="@+id/tvCounter"
			android:layout_width="64dp"
			android:layout_height="64dp"
			android:background="@drawable/ic_bookmark_black_24dp"
			android:gravity="center"
			android:inputType="number"
			android:text="9"
			android:drawablePadding="0dp"
			android:textColor="@color/white"
			android:textSize="16sp"
			android:textStyle="bold"
			app1:layout_constraintEnd_toEndOf="parent"
			app1:layout_constraintTop_toTopOf="parent" />

		<TextView
			android:id="@+id/tvCategory"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:gravity="start"
			android:hint="Kategorija"
			android:lines="1"
			android:maxLines="1"
			android:textColor="@color/colorTextPrimary"
			android:textSize="16sp"
			app1:layout_constraintBottom_toBottomOf="@+id/ivIssueImage"
			app1:layout_constraintStart_toStartOf="@+id/tvType"
			app1:layout_constraintTop_toBottomOf="@+id/tvType"
			app:ignore="MissingConstraints" />

		<TextView
			android:id="@+id/tvSecondCategory"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="start"
			android:hint="Druga kategorija"
			android:lines="1"
			android:maxLines="1"
			android:textColor="@color/colorTextPrimary"
			android:textSize="16sp"
			app1:layout_constraintBottom_toBottomOf="@+id/tvCategory"
			app1:layout_constraintEnd_toEndOf="@+id/tvIssueTitle"
			app1:layout_constraintTop_toTopOf="@+id/tvCategory"
			app:ignore="MissingConstraints" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>