<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    tools:context = "com.nasgrad.DetailActivity">

    <TextView
        android:text = "Title Issue"
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:id = "@+id/titleDetailsLabel"
        android:layout_marginTop = "16dp"
        app:layout_constraintTop_toTopOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        android:layout_marginStart = "24dp"
        android:typeface = "normal"
        android:textSize = "18sp"
        android:textAlignment = "center"
        android:layout_marginEnd = "8dp"
        app:layout_constraintEnd_toStartOf = "@+id/editSpiner"/>
    
    <ScrollView
        android:id = "@+id/scrollViewDetailsActivity"
        android:layout_width = "0dp"
        android:layout_height = "0dp"
        android:layout_marginTop = "24dp"
        android:orientation = "vertical"
        app:layout_constraintTop_toBottomOf = "@+id/titleDetailsLabel"
        app:layout_constraintBottom_toBottomOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintHorizontal_bias = "0.0"
        app:layout_constraintVertical_bias = "1.0">

        <android.support.constraint.ConstraintLayout
            android:id = "@+id/detailsActivityWrapper"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content">
            
            <ImageView
                android:src = "@color/colorAccent"
                android:layout_width = "250dp"
                android:layout_height = "200dp"
                android:id = "@+id/issuePicture"
                android:contentDescription = "issueReported"
                android:layout_marginStart = "8dp"
                app:layout_constraintStart_toStartOf = "parent"
                android:layout_marginEnd = "8dp"
                app:layout_constraintEnd_toEndOf = "parent"/>
            
            <TextView
                android:text = "Tip(iz predefinisane liste)"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:id = "@+id/typeFromPredefinedList"
                android:textSize = "18sp"
                android:layout_marginTop = "24dp"
                app:layout_constraintTop_toBottomOf = "@+id/issuePicture"
                android:layout_marginStart = "24dp"
                app:layout_constraintStart_toStartOf = "parent"/>
            <TextView
                android:text = "Adresa"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:id = "@+id/adressLabel" android:layout_marginTop = "16dp"
                app:layout_constraintTop_toBottomOf = "@+id/typeFromPredefinedList"
                app:layout_constraintStart_toStartOf = "parent" android:layout_marginStart = "32dp"
                android:textSize = "18sp"/>
            <TextView
                android:text = "Opis Problema"
                android:layout_width = "0dp"
                android:layout_height = "300dp"
                android:id = "@+id/textView4" app:layout_constraintEnd_toEndOf = "parent"
                android:layout_marginEnd = "8dp"
                app:layout_constraintStart_toStartOf = "parent" android:layout_marginStart = "8dp"
                android:layout_marginTop = "24dp" app:layout_constraintTop_toBottomOf = "@+id/adressLabel"
                android:layout_marginBottom = "8dp" app:layout_constraintBottom_toBottomOf = "parent"
                android:textSize = "24sp"/>
            
            <ImageButton
                android:src = "@drawable/ic_chevron_left"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:id = "@+id/imageButton2"
                android:background = "@android:color/transparent" app:layout_constraintStart_toStartOf = "parent"
                android:layout_marginStart = "8dp" app:layout_constraintEnd_toStartOf = "@+id/issuePicture"
                android:layout_marginEnd = "8dp"
                app:layout_constraintTop_toTopOf = "@+id/issuePicture"
                app:layout_constraintBottom_toBottomOf = "@+id/issuePicture"/>
            <ImageButton
                android:src = "@drawable/ic_chevron_right"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:id = "@+id/imageButton3"
                android:background = "@android:color/transparent"
                app:layout_constraintStart_toEndOf = "@+id/issuePicture"
                android:layout_marginStart = "8dp" app:layout_constraintEnd_toEndOf = "parent"
                android:layout_marginEnd = "8dp"
                app:layout_constraintTop_toTopOf = "@+id/issuePicture"
                app:layout_constraintBottom_toBottomOf = "@+id/issuePicture"/>
            
            
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <Button
        android:text = "Prijavi Problem"
        android:layout_width = "wrap_content"
        android:layout_height = "36dp"
        android:id = "@+id/reportIssue" android:layout_marginBottom = "8dp"
        app:layout_constraintBottom_toBottomOf = "parent" app:layout_constraintEnd_toEndOf = "parent"
        android:layout_marginEnd = "8dp" app:layout_constraintStart_toStartOf = "parent"
        android:layout_marginStart = "8dp" android:fontFamily = "sans-serif"
        android:background = "@color/colorPrimaryDark" android:padding = "4dp"
        android:textColor = "@android:color/white"/>
    <Spinner
        android:layout_width = "40dp"
        android:layout_height = "40dp"
        android:id = "@+id/editSpiner" app:layout_constraintEnd_toEndOf = "parent" android:layout_marginEnd = "16dp"
        android:layout_marginTop = "16dp" app:layout_constraintTop_toTopOf = "parent"/>

</android.support.constraint.ConstraintLayout>